
<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %> 
    <title>Blockbuster</title>
    <link rel="stylesheet" href="css/styles-home.css">
    <link rel="stylesheet" href="/css/administrarProductos.css">  
    <link rel="stylesheet" href="/css/styles-carrito.css">
</head>
<body>
    
    <%- include('partials/header') %>  
    <h1 class="titulo">Mis Alquileres</h1>


    <section class="section-cards">
        <% rentalList.forEach(element => { %>
    
            <article class="card"  style="background-color:rgba(195, 180, 180, 0.3)">
                <img class="img-pelicula" src="<%= element.image_url %> ">
                <h2 class="tituloPeli"><%= element.title %></h2>
               
                <a href="/products/video/<%= element.id %> " class="botonFormBusc">VER AHORA</a>
                <a href="/products/productDetail?id=<%= element.id %> " class="botonFormBusc">COMPARTIR</a>
                <li><form action="/users/rental/delete/<%= user.id %>/<%= element.id %>/" method="post"><input class="botonFormBusc" type="submit" value="DEVOLVER"></form></li>

            </article>
        <% }); %> 
    </section>

    <section class="section-cards" style="display: none;">
    <% listaPeliculas.forEach(element => { %>

        <article class="card">
            <img class="img-pelicula" src="<%= element.imagen %> ">
            <h2 class="tituloPeli"><%= element.titulo %></h2>
            <!-- <h3 class="texto"><%= element.descripcion %></h3> -->
            <!-- <h3 class="texto"><%= element.precio %></h3> -->
            <a href="/products/video/<%= element.id %> " class="botonFormBusc">VER AHORA</a>
            <a href="/products/productDetail?id=<%= element.id %> " class="botonFormBusc">COMPARTIR</a>

        </article>
    <% }); %> 
</section>
<div class="navbar fixed-bottom"><%- include('partials/footer') %> </div>
    

</body>
</html>