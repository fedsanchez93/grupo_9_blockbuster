<body>
    
    <%- include('partials/header') %>  

    <main>
        <%- include('partials/headerAdmin') %>  
        <form class="form-filtrar-productos" action="/products/administrarProductos" method="get">
            <input type="search" name="filtrar" id="" class="inputBuscador" placeholder="El Guason...">
            <input class="inputBuscar" type="submit" value="Buscar pelicula">
        </form>
        <section class="section-cards">

            <% movies.forEach(element => { %>
                <article class="card">
                    <div class="div-img-video">
                        <img class="img-pelicula" src="<%= element.image_url %> ">
                        <iframe class="trailer" src="<%= element.trailer %> " title="YouTube video player" frameborder="0" ></iframe>
                    </div>
                    <h2 class="texto">"<%= element.title %>" </h2>
                    <div class="div-botones">
                        <a href="/products/editarProducto?id=<%= element.id %>" class="botonFormBusc">Editar</a>
                        <a href="/products/productDetail?id=<%= element.id %>" class="botonFormBusc">Ver</a>
    
                        <form action="/products/eliminarProducto/<%= element.id %>/?_method=DELETE" method="POST">
                            <input class="botonFormDelete" type="submit" value="Eliminar">
                        </form>
                    </div>
                </article>
                <% }); %> 

