                    </div> -->
                    <!-- <div class="boton alquiler">
                        <a href="/carrito/<%= listaPeliculas[id-1].id%>">Alquilar/Ver</a>   
                    </div> -->
                    <article class="middle-menu">
                        <form action="/products/misAlquileres" method="GET">
                            <div class="buttons">
                                <button type="submit" class="btn">Pagar</button>
                            </div>
                        </form>
                    </article>
                </div>
            </div>

            <div class="bloque3">
                <div class="calificaciones">
                    <ul></a>
                        <li><a class="botonNav" href="/carrito/<%= anterior %> "> <= Anterior </a>    <a class="botonNav" href="/carrito/<%= siguiente %>"> Siguiente =></a></li>
                        <li><a href="#">Calificación Blockbuster</a><div class="calificacion"><%= listaPeliculas[id-1].CalificacionBlockbuster %></div></li>
                        <li><a href="#">Calificación IMDb</a> <div class="calificacion"><%= listaPeliculas[id-1].CalificacionIMDb %></div></li>
                        <li><a href="#">Calificación Rotten Tomatoes </a><div class="calificacion"><%= listaPeliculas[id-1].CalificacionRottenTomatoes %></div></li>
                    </ul>
                </div>
            </div>

        </section>
