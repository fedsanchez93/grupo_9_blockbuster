<!-- Button trigger modal -->
<button type="button" class="btn btn-warning boton-alquiler" data-bs-toggle="modal" data-bs-target="#exampleModal">
    Alquilar
  </button>
  
  <!-- Modal -->
  <div class="modal " id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="false">
    <!-- <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable overflow-y-scroll"> -->
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
      <div class="modal-content">
        <div class="modal-header bg-primary">
          <h5 class="modal-title " id="exampleModalLabel">Confirmar Pago</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
       
        <div class="card overflow-y-scroll" >
          <img src="<%= movie.image_url%>" class="card-img-top" alt="img" style="max-width: 200px; margin: auto; max-height: 400px;">
          <div class="card-body" style="color: black;">
            <h5 class="card-title"><%= movie.title%></h5>
            <p class="card-text"><%= movie.description%></p>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">Precio:</li>
            <li class="list-group-item"><%= movie.price%></li>
          </ul>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
          <!-- <button type="button" class="btn btn-primary">Pagar</button> -->
          <li><form action="/users/rental/add/<%= user.id %>/<%= movie.id %>/" method="post"><input type="hidden" name="dias" value="0"><button type="submit" class="btn btn-primary" class="boton">Pagar</button></form></li>

        </div>
      </div>
    </div>
  </div>



